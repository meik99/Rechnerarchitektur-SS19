    "version": "0.2.0",
    "configurations": [
        {
            "type": "dashmips",
            "request": "launch",
            "name": "dashmips (Run Current File)",
            "program": "${file}",
            "stopOnEntry": true,
            "registerFormat": "dec"
        },
        {
            "type": "dashmips",
            "request": "launch",
            "name": "dashmips (Attach Current File)",
            "program": "${file}",
            "stopOnEntry": true,
            "registerFormat": "dec",
            "port": 9999,
            "host": "localhost",
            "launchDebugger": false
        }
    ]
}